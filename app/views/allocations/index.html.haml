%h1.lead.text-center Portfolio Risk Assessment Tool
%hr

%ul.nav.nav-tabs#myTab
  %li.active= link_to "Prediction", "#results", data: {toggle: "tab"}
  %li= link_to "Stocks", "#stocks", data: {toggle: "tab"}
  %li= link_to "Bonds", "#bonds", data: {toggle: "tab"}
  %li= link_to "Cash", "#cash", data: {toggle: "tab"}
.tab-content
  .tab-pane.active#results
    = render 'home/form_investment'
    %hr
    = render 'home/body'
  .tab-pane#stocks
    = render partial: 'list', locals: {allocations: @stocks}
  .tab-pane#bonds
    = render partial: 'list', locals: {allocations: @bonds}
  .tab-pane#cash
    = render partial: 'list', locals: {allocations: @cash}
