%form{name:'formInvestment'}
  .row.text-center
    .col-lg-4
      %span
    .col-lg-4
      .form-group
        %label Initial Investment
        .input-group
          %input.input-text-align-right{type: 'text', class: 'form-control', id: "amount", validate:''}
          %span.input-group-addon $
    .col-lg-4
      %span
  .row.text-center
    .col-lg-4
      .form-group
        %label Stocks
        .input-group
          %input.input-text-align-right{type: 'number', class: 'form-control', id: "stocks", validate:''}
          %span.input-group-addon %
    .col-lg-4
      .form-group
        %label Bonds
        .input-group
          %input.input-text-align-right{type: 'number', class: 'form-control', id: "bounds", validate:''}
          %span.input-group-addon %
    .col-lg-4
      .form-group
        %label Cash
        .input-group
          %input.input-text-align-right{type: 'number', class: 'form-control', id: "cash", validate:''}
          %span.input-group-addon %

